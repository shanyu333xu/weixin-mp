<view><view class="header"><button data-event-opts="{{[['tap',[['navigateToLogin',['$event']]]]]}}" class="login-button" bindtap="__e"><image src="/static/pages/images/登录.png"></image></button><button type="primary" data-event-opts="{{[['tap',[['toStockInfo',['$event']]]]]}}" bindtap="__e">股票页面</button><view class="title-space"></view><view class="title-space"></view></view><view class="page-header"><text>{{stockDate}}</text></view><text>今日板块</text><scroll-view class="modules-scroll-view" scroll-x="{{true}}"><block wx:for="{{$root.l1}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="module"><view class="{{['module-header '+(index==2?'second':'first')]}}">{{item.$orig.title}}</view><view class="stocks-container"><block wx:for="{{item.l0}}" wx:for-item="item" wx:for-index="index1" wx:key="index1"><view class="stock-row"><view class="stock-card"><view class="stock-name">{{item.$orig.name}}</view><view class="{{['stock-percent '+(item.g0?'negative':'positive')]}}">{{item.$orig.percent}}</view></view></view></block></view></view></block></scroll-view><text>股票排行</text><view class="page-header"></view><view class="tabs"><text class="{{['tab '+(activeTab==='rise'?'active':'')]}}" data-type="rise" data-event-opts="{{[['tap',[['handleTabChange',['$event']]]]]}}" bindtap="__e">涨幅榜</text><text class="{{['tab '+(activeTab==='fall'?'active':'')]}}" data-type="fall" data-event-opts="{{[['tap',[['handleTabChange',['$event']]]]]}}" bindtap="__e">跌幅榜</text><text class="{{['tab '+(activeTab==='volume'?'active':'')]}}" data-type="volume" data-event-opts="{{[['tap',[['handleTabChange',['$event']]]]]}}" bindtap="__e">成交额</text><text class="{{['tab '+(activeTab==='speed'?'active':'')]}}" data-type="speed" data-event-opts="{{[['tap',[['handleTabChange',['$event']]]]]}}" bindtap="__e">涨速榜</text></view><scroll-view style="height:300px;" scroll-y="{{true}}"><view class="stock-list-header"><text class="header-item">股票名称</text><text class="header-item">最新价</text><text class="header-item">涨跌幅</text><text class="header-item">涨速</text></view><view class="stocks-list"><block wx:for="{{displayStocks}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="stock-item"><view class="name-code"><text class="stock-name">{{item.name}}</text><text class="stock-code">{{item.code}}</text></view><text class="{{['price '+(item.change[0]=='-'?'negative':'positive')]}}">{{item.price}}</text><text class="{{['change '+(item.change[0]=='-'?'negative':'positive')]}}">{{item.change}}</text><text class="{{['speed '+(item.speed[0]=='-'?'negative':'positive')]}}">{{item.speed}}</text></view></block></block></view></scroll-view></view>